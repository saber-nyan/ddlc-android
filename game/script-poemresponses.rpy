label poemresponse_start:
    $ poemsread = 0
    $ skip_transition = False
    label poemresponse_loop:
        $ skip_poem = False
        if renpy.music.get_playing() and not (renpy.music.get_playing() == audio.t5 or renpy.music.get_playing() == audio.t5c):
            $ renpy.music.play(audio.t5, fadeout=1.0, if_changed=True)
        if skip_transition:
            scene bg club_day
        else:
            scene bg club_day
            with wipeleft_scene
        $ skip_transition = False
        if not renpy.music.get_playing():
            play music t5
    label poemresponse_start2:
        $ skip_poem = False
        if persistent.playthrough == 2:
            $ pt = "2"
        else:
            $ pt = ""
        if poemsread == 0:
            $ menutext = "Кому я должен в первую очередь показать свою поэму?"
        else:
            $ menutext = "Кому я должен показать свою поэму следующей?"

        menu:
            "[menutext]"

            "Сайори" if not s_readpoem and persistent.playthrough == 0:
                $ s_readpoem = True
                if chapter == 1 and poemsread == 0:
                    "Мне однозначно комфортнее показывать её Сайори первой."
                    "Она мой хороший друг, в конце концов."
                call poemresponse_sayori from _call_poemresponse_sayori
            "Нацуки" if not n_readpoem:
                $ n_readpoem = True
                if chapter == 1 and poemsread == 0:
                    "Вчера я говорил Нацуки, что мне интересны её поэмы."
                    "Справедливее будет, если я в начале покажу ей свою."
                call poemresponse_natsuki from _call_poemresponse_natsuki
            "Юри" if not y_readpoem and not y_ranaway:
                $ y_readpoem = True
                if chapter == 1 and poemsread == 0:
                    "Юри выглядит самой опытной, так что мне следует начать с неё."
                    "Если честно, я могу доверять её мнению."
                call poemresponse_yuri from _call_poemresponse_yuri
            "Моника" if not m_readpoem:
                $ m_readpoem = True
                if chapter == 1 and poemsread == 0:
                    "Мне следует начать с Моники."
                    "Похоже, что вчера она очень стремилась прочитать мою поэму, я хочу дать ей знать, что я приложил все усилия."
                call poemresponse_monika from _call_poemresponse_monika
        $ poemsread += 1
        if poemsread < 3 or (persistent.playthrough == 0 and poemsread < 4):
            jump poemresponse_loop


    $ s_readpoem = False
    $ n_readpoem = False
    $ y_readpoem = False
    $ m_readpoem = False
    $ poemsread = 0
    return

label poemresponse_sayori:
